
<% if @products.any? %>
  <% @products.each do |product| %>
    <%= product.name %>
    <%= product.description %>
    <% product.categories.each do |category| %>
      <%= category.title %>
    <% end %>
  <% end %>
<% else %>
  no products
<% end %>

