
<% if @products.any? %>
  <% @products.each do |product| %>
   <%= label(product.name, :product) %>
    <%= product.name %><br>

    <%= label(product.description, :description) %>
    <%= product.description %><br>

    <% product.categories.each do |category| %>
      <%= label(category.title, :category) %>
      <%= category.title %><br>
    <% end %><br><br>
  <% end %>
<% else %>
  no products
<% end %><br><br>

